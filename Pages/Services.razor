@page "/servicios"

<section class="services-section">
    <div class="services-container">
        <div class="services-header">
            <h2>Nuestros servicios</h2>
            <div class="divider"></div>
            <p>
                Ofrecemos soluciones tecnológicas integrales diseñadas para impulsar el crecimiento
                y la eficiencia de tu empresa.
            </p>
        </div>

        <!-- Servicios principales -->
        <div class="main-services">
            @foreach (var service in MainServices)
            {
                <div class="service-card">
                    <div class="service-card-header">
                        <div class="icon-wrapper">
                            <i class="@service.IconClass"></i>
                        </div>
                        <h3>@service.Title</h3>
                    </div>
                    <p class="service-description">@service.Description</p>
                    <ul class="service-features">
                        @foreach (var feature in service.Features)
                        {
                            <li><span class="dot"></span>@feature</li>
                        }
                    </ul>
                    <button onclick="scrollToSection('contactanos')" class="service-btn">Solicitar Cotización</button>
                </div>
            }
        </div>

        <!-- Servicios adicionales -->
        <div class="additional-services-header">
            <h3>Complementarios</h3>
            <p>Servicios adicionales para completar tu transformación digital</p>
        </div>

        <div class="additional-services">
            @foreach (var service in AdditionalServices)
            {
                <div class="aditional-services small">
                    @* <div class="icon-wrapper small">
                        <i class="@service.IconClass"></i>
                    </div> *@
                    <h4>@service.Title</h4>
                    <p>@service.Description</p>
                </div>
            }
        </div>
    </div>
</section>

@code {
    public class Service
    {
        public string IconClass { get; set; } = string.Empty;
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public List<string> Features { get; set; } = new();
    }

    private List<Service> MainServices = new()
    {
        new Service {
            IconClass = "fas fa-database",
            Title = "Sistemas de Gestión Empresarial",
            Description = "Desarrollo de ERP, CRM y sistemas personalizados para optimizar todos los procesos de tu empresa.",
            Features = new List<string> {
                "ERP completo y personalizado",
                "CRM para gestión de clientes",
